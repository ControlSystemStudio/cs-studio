<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="striptool" name="StripTool" schema="schema/striptool.exsd"/>
   <extension-point id="openDisplay" name="Open Display" schema="schema/openDisplay.exsd"/>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.csstudio.platform.ui.internal.perspectives.CssDefaultPerspective"
            id="org.csstudio.platform.ui.internal.perspectives.CssDefaultPerspective"
            name="%cssPerspectiveName"/>
   </extension>

   <extension
         id="logPreferences"
         name="logPreferences"
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.ConsoleAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.console"
            name="%logConsoleAppenderPageName"/>
      <page
            category="org.csstudio.platform.ui.css.platform"
            class="org.csstudio.platform.ui.internal.logging.LoggingPreferencePage"
            id="org.csstudio.platform.log.logPreferences"
            name="%logPageName"/>
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.FileAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.file"
            name="%logFileAppenderPageName"/>
      <page
            category="org.csstudio.platform.log.logPreferences"
            class="org.csstudio.platform.ui.internal.logging.JmsAppenderPreferencePage"
            id="org.csstudio.platform.log.logPreferences.jms"
            name="%logJmsAppenderPageName"/>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="tocApps.xml"
            primary="true"/>
      <toc
            file="tocCore.xml"
            primary="true"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IResource"
            class="org.csstudio.platform.ui.internal.workbench.ResourcesAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
      <factory
            adaptableType="org.csstudio.platform.model.IProcessVariable"
            class="org.csstudio.platform.ui.internal.workbench.ProcessVariableAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
      <factory
            adaptableType="org.csstudio.platform.model.IControlSystemItem"
            class="org.csstudio.platform.ui.internal.workbench.ControlSystemItemAdapterFactory">
         <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IWorkspace"
            class="org.csstudio.platform.ui.internal.workbench.UndoContextAdapterFactory">
         <adapter
               type="org.eclipse.core.commands.operations.IUndoContext">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.eclipse.csstudio.ui.systemActions"
            label="System Actions"
            visible="true">         
         <action
               class="org.csstudio.platform.ui.internal.actions.OpenPreferencesAction"
               id="org.csstudio.platform.ui.internal.actions.PreferencesAction"
               label="%menuCssPreferences_Label"
               menubarPath="css/end"
               style="push"
               tooltip="%menuCssPreferences_Tooltip"/>
         <action
               class="org.csstudio.platform.ui.internal.actions.ExportPreferencesAction"
               id="org.csstudio.platform.ui.action1"
               label="%exportPreferences"
               menubarPath="file/fileEnd"
               style="push">
         </action>
         <action
               class="org.csstudio.platform.ui.internal.actions.OpenWorkspaceExplorerAction"
               icon="icons/workspaceExplorer.png"
               id="org.csstudio.platform.ui.internal.actions.OpenWorkspaceExplorerAction"
               label="%menuOpenExplorer"
               menubarPath="file/fileEnd"
               style="push"
               toolbarPath="file/fileEnd"
               tooltip="%menuOpenExplorer"> 
         </action>
      </actionSet>
      <actionSet
            id="org.csstudio.platform.workspace.filemenu"
            label="FileActions"
            visible="true">
         <action
               class="org.csstudio.platform.ui.internal.actions.RestartAction"
               id="org.csstudio.platform.ui.internal.actions.restart"
               label="%restart"
               menubarPath="file/workspace"
               style="push"
               tooltip="%restart_tt">
         </action>
         <action
               class="org.csstudio.platform.ui.internal.actions.SwitchWorkspaceAction"
               id="org.csstudio.platform.ui.internal.actions.openworkspace"
               label="%switch"
               menubarPath="file/workspace"
               style="push"
               tooltip="%switch_tt">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.platform"
            class="org.csstudio.platform.ui.internal.localization.LocalePreferencePage"
            id="org.csstudio.platform.ui.internal.localization.LocalePreferencePage"
            name="%localePageName"/>
      <page
            category="org.csstudio.platform.ui.css.platform"
            class="org.csstudio.platform.ui.internal.preferences.SystemPropertiesPreferencePage"
            id="org.csstudio.platform.ui.internal.preferences.SystemPropertiesPreferencePage"
            name="%systemPropertyPreferencesPageName"/>
   <page
         category="org.csstudio.platform.ui.css.platform"
         class="org.csstudio.platform.ui.internal.preferences.OnsiteSubnetPreferencePage"
         id="org.csstudio.platform.ui.page1"
         name="Onsite Subnets">
   </page>
   <page
         category="org.csstudio.platform.ui.css.applications.configuration"
         class="org.csstudio.platform.ui.internal.statisticview.PreferencePage"
         id="org.csstudio.platform.ui.StatisticViewPreferencePage"
         name="Statistic View">
   </page>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml"
            />
   </extension>
	<extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS"/>
      <view
            class="org.eclipse.ui.ExtensionFactory:progressView"
            icon="icons/pview.gif"
            id="org.csstudio.platform.ui.views.progress"
            name="%progressView"/>
      <view
            allowMultiple="true"
            category="org.csstudio"
            class="org.csstudio.platform.ui.internal.statisticview.StatisticView"
            icon="icons/StatisticViewer.png"
            id="org.csstudio.platform.ui.StatisticView"
            name="Statistic"
            restorable="false">
      </view>
   </extension>
   <extension
         id="cssPreferenceCategories"
         name="cssPreferencesCategories"
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.csstudio.platform.ui.internal.preferences.CSSPlatformPreferencePage"
            id="org.csstudio.platform.ui.css.platform"
            name="%platformPreferencesName"/>
      <page
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications"
            name="%applicationsPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.display"
            name="%displayPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.alarm"
            name="%alarmPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.trends"
            name="%trendsPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.diag"
            name="%diagnosticsPreferencesName"/>            
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.debugging"
            name="%debuggingPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.configuration"
            name="%configurationPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.management"
            name="%managementPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.editors"
            name="%editorsPreferencesName"/>
      <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.utilities"
            name="%utilitiesPreferencesName"/>                                                
	  <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.test"
            name="%testPreferencesName"/> 
	  <page
            category="org.csstudio.platform.ui.css.applications"
            class="org.csstudio.platform.ui.internal.preferences.CSSApplicationsPreferencePage"
            id="org.csstudio.platform.ui.css.applications.others"
            name="%othersPreferencesName"/>                         
   </extension>

  <extension
        point="org.eclipse.ui.popupMenus">
     <objectContribution
           adaptable="true"
           id="org.csstudio.platform.ui.copyPvToClipboard"
           objectClass="org.csstudio.platform.model.IProcessVariable">
        <action
              class="org.csstudio.platform.ui.internal.developmentsupport.util.CopyPvNameToClipboardAction"
              icon="icons/editcopy.png"
              id="CopyPvNameToClipboard"
              label="Copy Pv Name to Clipboard">
        </action>
     </objectContribution>
     <objectContribution
           id="IConnectorContributions"
           objectClass="org.csstudio.platform.simpledal.IConnector">
        <action
              class="org.csstudio.platform.ui.internal.connectionview.DisposeConnectorAction"
              icon="icons/cancel.png"
              id="org.csstudio.platform.ui.action1"
              label="Dispose">
        </action>
     </objectContribution>
  </extension>
  <extension
        point="org.eclipse.ui.commands">
     <command
           description="%saveValueCommandDescription"
           id="org.csstudio.platform.ui.commands.saveValue"
           name="%saveValueCommand">
        <commandParameter
              id="org.csstudio.platform.ui.commands.saveValue.pv"
              name="%saveValueCommandPVParameter"
              optional="true">
        </commandParameter>
        <commandParameter
              id="org.csstudio.platform.ui.commands.saveValue.value"
              name="%saveValueCommandValueParamter"
              optional="true">
        </commandParameter>
     </command>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="menu:help?after=additions">
        <menu
              label="%updateMenu.label">
           <command
                 commandId="org.eclipse.ui.update.findAndInstallUpdates"
                 helpContextId="org.eclipse.update.ui.newUpdates"
                 icon="icons/usearch_obj.gif"
                 label="%actionSets.updates.label"
                 style="push">
           </command>
           <command
                 commandId="org.eclipse.ui.update.manageConfiguration"
                 helpContextId="org.eclipse.update.ui.newUpdates"
                 icon="icons/configs.gif"
                 label="%actionSets.configManager.label"
                 style="push">
           </command>
        </menu>
     </menuContribution>
     <menuContribution
           locationURI="menu:window?after=additions">
        <command
              commandId="org.eclipse.ui.ToggleCoolbarAction"
              style="push"
              tooltip="%menu.toggleCoolbar.tooltip">
           <visibleWhen
                 checkEnabled="false">
              <or>
                 <with
                       variable="activeWorkbenchWindow.isCoolbarVisible">
                    <equals
                          value="false">
                    </equals>
                 </with>
                 <with
                       variable="activeWorkbenchWindow.isPerspectiveBarVisible">
                    <equals
                          value="false">
                    </equals>
                 </with>
              </or>
           </visibleWhen>
        </command>
     </menuContribution>
  </extension>
  <extension
        point="org.csstudio.platform.managementCommandResultReceivers">
     <receiver
           class="org.csstudio.platform.ui.internal.statisticview.StatisticReceiver"
           resultType="org.csstudio.platform.statistic.XmlStatistic">
     </receiver>
  </extension>
  <extension
        point="org.eclipse.core.runtime.preferences">
     <initializer
           class="org.csstudio.platform.ui.internal.statisticview.PreferenceInitializer">
     </initializer>
  </extension>
</plugin>
