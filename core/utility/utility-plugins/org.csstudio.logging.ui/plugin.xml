<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.platform"
            class="org.csstudio.logging.ui.PreferencePage"
            id="org.csstudio.logging.ui.PreferencePage"
            name="%PrefName"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="org.csstudio.logging.ui.LoggingConfiguration"
            id="org.csstudio.logging.ui.LoggingConfiguration"
            name="Logging Configuration"
            restorable="false">
     </view>
     <view
            class="org.csstudio.logging.ui.FXLogginConfiguration"
            id="org.csstudio.logging.ui.FXLoggingConfiguration"
            name="Logging Configuration"
            restorable="true">
     </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:debugging">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="platform:/plugin/org.csstudio.logging.ui/icons/utilities-log-viewer-16.png"
               label="Logging Configuration"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.logging.ui.FXLoggingConfiguration">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.csstudio.logging.ui.FXLoggingConfiguration">
         <command
               commandId="org.csstudio.logging.ui.RefreshLoggers"
               icon="platform:/plugin/org.csstudio.logging.ui/icons/arrow-refresh-small.ico"
               tooltip="Refresh the logger list">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.logging.ui.RefreshLoggers"
            id="org.csstudio.logging.ui.RefreshLoggers"
            name="Refresh">
      </command>
   </extension>
</plugin>
