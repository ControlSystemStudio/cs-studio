<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.csstudio.logbook.ui.LogTableView"
            icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
            id="org.csstudio.logbook.ui.LogTableView"
            name="Log Table"
            restorable="true">
      </view>
      <view
            class="org.csstudio.logbook.ui.LogTreeView"
            icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
            id="org.csstudio.logbook.ui.LogTreeView"
            name="Log Tree"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:utility">
         <command
               commandId="org.csstudio.logbook.viewer.OpenLogViewer"
               icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
               label="Search Logbook"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.csstudio.logbook.viewer.OpenLogViewer"
               icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
               label="View Details"
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.logbook.LogEntry">
                     </adapt>
                  </iterate>
                  <and>
                     <with
                           variable="activeMenuSelection">
                        <count
                              value="1">
                        </count>
                     </with>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.csstudio.logbook.ui.LogTableView">
         <command
               commandId="org.csstudio.logbook.ui.OpenLogEntryBuilderDialog"
               icon="platform:/plugin/org.csstudio.logbook.ui/icons/logentry-add-16.png"
               label="Create New LogEntry"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.csstudio.logbook.ui.LogTreeView">
         <command
               commandId="org.csstudio.logbook.ui.OpenLogEntryBuilderDialog"
               icon="platform:/plugin/org.csstudio.logbook.ui/icons/logentry-add-16.png"
               label="Create New LogEntry"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.csstudio.logbook.ui.LogViewerPerspective"
            icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
            id="org.csstudio.logbook.ui.LogViewerPerspective"
            name="LogViewerPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.csstudio.logbook.ui.LogViewer"
            default="false"
            icon="platform:/plugin/org.csstudio.logbook.ui/icons/logbook-16.png"
            id="org.csstudio.logbook.ui.LogViewer"
            name="LogViewer">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.logbook.ui.OpenLogViewer"
            id="org.csstudio.logbook.viewer.OpenLogViewer"
            name="View Details">
      </command>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true"/>
   </extension>

</plugin>
