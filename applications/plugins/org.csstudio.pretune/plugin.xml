<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.csstudio.pretune.PreTune"
            icon="platform:/plugin/org.csstudio.pretune/icons/knob-16.png"
            id="org.csstudio.pretune"
            name="pretune"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:display">
         <separator
               name="org.csstudio.physics.applications"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="platform:/plugin/org.csstudio.pretune/icons/knob-16.png"
               label="pretune"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.pretune">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.epics.vtype.VTable"
            class="org.csstudio.pretune.AdapterFactory">
         <adapter
               type="org.csstudio.logbook.LogEntryBuilder">
         </adapter>
      </factory>
   </extension>

</plugin>
