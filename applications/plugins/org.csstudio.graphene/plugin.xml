<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.ui.menu.popup.processvariable">
         <menu
               icon="platform:/plugin/org.csstudio.utility.pvmanager.widgets/icons/value-16.png"
               id="org.csstudio.ui.menu.popup.value"
               label="%Value">
            <visibleWhen>
            <or>
               <with variable="activeMenuSelection">
                  <iterate>
                     <adapt type="org.epics.vtype.VType"/>
                  </iterate>
                  <and>
                     <count value="+"/>
                  </and>
               </with>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="[Lorg.epics.vtype.VType;">
                     </adapt>
                  </iterate>
                  <and>
                     <count value="+"/>
                  </and>
               </with>
            </or>
            </visibleWhen>
            <separator
                  name="main">
            </separator>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.csstudio.ui.menu.popup.value">
         <command
               commandId="org.csstudio.graphene.CopyValueToClipboardHandler"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/paste_edit.gif"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio.graphene.category"
            name="Graphene">
      </category>
      <view
            category="org.csstudio.graphene.category"
            class="org.csstudio.graphene.HistogramView"
            icon="icons/graphene-histogram-16.png"
            id="org.csstudio.graphene.HistogramView"
            name="Histogram (alpha)"
            restorable="true">
      </view>
      <view
            category="org.csstudio.graphene.category"
            class="org.csstudio.graphene.LineGraph2DView"
            icon="icons/graphene-line-16.png"
            id="org.csstudio.graphene.LineGraph2DView"
            name="Line Graph (alpha)"
            restorable="true">
      </view>
      <view
            category="org.csstudio.graphene.category"
            class="org.csstudio.graphene.ScatterGraph2DView"
            icon="icons/graphene-scatter-16.png"
            id="org.csstudio.graphene.ScatterGraph2DView"
            name="Scatter Graph (alpha)"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:display">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/graphene-histogram-16.png"
               label="Histogram (alpha)"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.HistogramView">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/graphene-line-16.png"
               label="Line Graph(alpha)"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.LineGraph2DView">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/graphene-scatter-16.png"
               label="Scatter Graph(alpha)"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.graphene.ScatterGraph2DView">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.ui.menu.popup.value">
         <command
               commandId="org.csstudio.graphene.configure"
               icon="platform:/plugin/org.csstudio.ui.util/icons/gear-16.png"
               label="Configure..."
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.ConfigurableWidget">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.channel.views.configure">
         <menu
               label="Y PV">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.YAxisProcessVariable">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=org.csstudio.channel.views.configure">
         <menu
               label="X PV">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.csstudio.ui.util.XAxisProcessVariable">
                     </adapt>
                  </iterate>
                  <and>
                     <count
                           value="*">
                     </count>
                  </and>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
    </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.ui.util.ConfigureHandler"
            id="org.csstudio.graphene.configure"
            name="Configure...">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.graphene.VTypeAdaptable"
            class="org.csstudio.graphene.VTypeAdapterFactory">
         <adapter
               type="org.epics.vtype.VType">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.ProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.csdata.ProcessVariable">
         </adapter>
         <adapter
               type="[Lorg.csstudio.csdata.ProcessVariable;">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.ConfigurableWidgetAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.ConfigurableWidget">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.YAxisProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.YAxisProcessVariable">
         </adapter>
      </factory>
      <factory
            adaptableType="org.csstudio.ui.util.XAxisProcessVariableAdaptable"
            class="org.csstudio.ui.util.CommonAdapterFactory">
         <adapter
               type="org.csstudio.ui.util.XAxisProcessVariable">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.graphene.CopyValueToClipboardHandler"
            id="org.csstudio.graphene.CopyValueToClipboardHandler"
            name="Copy Value to Clipboard">
      </command>
   </extension>

</plugin>
