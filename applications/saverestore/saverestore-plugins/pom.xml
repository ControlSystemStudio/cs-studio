<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.csstudio</groupId>
    <artifactId>save-set-restore</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>save-set-restore-plugins</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>org.csstudio.ui.fx.util</module>
    <module>org.csstudio.saverestore</module>
    <module>org.csstudio.saverestore.git</module>
    <module>org.csstudio.saverestore.masar</module>
    <module>org.csstudio.saverestore.ui</module>
    <module>org.csstudio.saverestore.ui.help</module>
    <module>org.csstudio.saverestore.ui.browser</module>
    <module>org.csstudio.saverestore.ui.browser.periodictable</module>
    <module>org.csstudio.saverestore.demo</module>
    <module>org.csstudio.saverestore.test</module>
    <module>org.csstudio.saverestore.git.test</module>
    <module>org.csstudio.saverestore.masar.test</module>
    <!-- MAVEN complains that it cannot find javafx.scene.Node when executing the tests in these plugins -->
    <!--module>org.csstudio.saverestore.ui.test</module-->
  </modules>
  <!-- Filter the javax.xml.jre plugin, which appears to be functionally
       the same as javax.xml from Orbit.  Under specific circumstances
       this can cause build problems.   -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho.version}</version>
        <configuration>
           <filters>
              <filter>
                 <type>p2-installable-unit</type>
                 <id>javax.xml.jre</id>
                 <removeAll />
              </filter>
           </filters>
        </configuration>
      </plugin>
    </plugins>
 </build>
</project>
