<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.csstudio</groupId>
    <artifactId>pvmanager</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>pvmanager-plugins</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>org.csstudio.utility.pvmanager</module>
    <module>org.csstudio.utility.pvmanager.epics</module>
    <module>org.csstudio.utility.pvmanager.vtype</module>
    <module>org.csstudio.utility.pvmanager.exec</module>
    <module>org.csstudio.utility.pvmanager.file</module>
    <module>org.csstudio.utility.pvmanager.jdbc</module>
    <module>org.csstudio.utility.pvmanager.loc</module>
    <module>org.csstudio.utility.pvmanager.pva</module>
    <module>org.csstudio.utility.pvmanager.sim</module>
    <module>org.csstudio.utility.pvmanager.sys</module>
    <module>org.csstudio.utility.pvmanager.extra</module>
    <module>org.csstudio.utility.pvmanager.graphene</module>
  </modules>
  
   <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.3.1</version>
          <configuration>
            <archive>
              <manifestFile>${manifest-location}/MANIFEST.MF</manifestFile>
            </archive>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.felix</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <version>2.1.0</version>
          <configuration>
            <manifestLocation>${manifest-location}</manifestLocation>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
    <name>pvmanager-plugins</name>
</project>
